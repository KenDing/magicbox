<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/selector_general"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp">

            <ImageView
                android:id="@+id/img_hasUpdate1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="5dp"
                android:src="@mipmap/img_glanceat_dot"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_height="5dp"/>

            <ImageView
                android:id="@+id/img_icon1"
                android:layout_width="match_parent"
                android:src="@mipmap/ic_launcher"
                android:layout_height="match_parent"/>

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:background="@color/transparent_black"
                android:layout_height="match_parent" />
            
            <ImageView
                android:id="@+id/img_download1"
                android:background="@drawable/selector_general_appicon"
                android:src="@mipmap/img_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <cn.georgeyang.widget.AlwaysMarqueeTextView
            android:id="@+id/tv_appName1"
            android:text="sss`"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


