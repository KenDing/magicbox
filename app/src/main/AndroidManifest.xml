<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.georgeyang.magicbox">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="online.magicbox.app.App"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        <activity android:name="online.magicbox.app.MainActivity"
            android:theme="@style/Transparent"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--android:theme="@android:style/Theme.Holo.Light.NoActionBar"-->
        <activity

            android:name="online.magicbox.app.ProxyActivity">
            <intent-filter>
                <action android:name="cn.magicbox.plugin" />
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:scheme="magicbox" />
            </intent-filter>

        </activity>
    </application>

</manifest>